{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col">
				<h1>S'enregistrer</h1>
				<p style="padding-top: 10px; padding-left: 40px; font-size: 20px;">Afin de pouvoir passer une commande sur notre site web, vous devez vous inscrire ou vous connecter.</p>
				{{ form_errors(registrationForm) }}
				{{ form_start(registrationForm) }}
				<fieldset class="mb-3">
					<legend>Mon identité</legend>
					{{ form_row(registrationForm.lastname) }}
					{{ form_row(registrationForm.firstname) }}
					{{ form_row(registrationForm.email) }}
				</fieldset>
				<fieldset class="mb-3">
					<legend>Mes coordonnées</legend>
					{{ form_row(registrationForm.city) }}
					{{ form_row(registrationForm.country) }}
					{{ form_row(registrationForm.phone) }}
				</fieldset>

				{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
				{{ form_row(registrationForm.RGPDConsent) }}

				<button type="submit" class="btn btn-primary btn-md my-3" style="
				position: relative;
				left: 20%;
			">Je m'enregistre</button>
				{{ form_end(registrationForm) }}</div>
		</div>
	</section>

{% endblock %}
